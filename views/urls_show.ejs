<!-- views/pages/index.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include partials/_head.ejs %>
        <title>TinyApp</title>
    </head>
    <body class="container">

        <header>
            <% include partials/_header %>
        </header>

        <main>
            <div class="jumbotron">
                <h1>TinyApp</h1>
                <p>A bit.ly-like URL shortener.</p>
            </div>

            <div>
            <div class="table-responsive">
              <h2> Short URL: <%- shortURL%></h2>
              <form method="POST" action="/urls/<%- shortURL%>">
                <input type="text" name="longURL" id="longURL" value="<%- longURL%>">
                <button class="ui red basic button">Update</button>
              </form>


            </div>
            <div><a>Make a TinyURL<a></div>

            </div>

        </main>

        <footer>
             <% include partials/_footer %>
        </footer>

    </body>
</html>




